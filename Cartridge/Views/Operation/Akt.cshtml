@using Cartridge.Models
@using Cartridge.ViewModel
@model AktModel

@{
    ViewData["Title"] = "Akt";
}

<h3>Формування акту "Прийом-передачі"</h3>
<hr />
<br />
<div class="col-md-8">
    <form class="form" method="post">
        <div class="input-group input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Прийнято від: </span>
                <div class="col-sm-9">
                    <select class="form-control" name="prewLocal">
                        @foreach (var item in Model.Punkts)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group input-group mr-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Картридж буде передано на: </span>
                <div class="col-sm-9">
                    <select class="form-control" name="newLocal">
                        @foreach (var item in Model.Punkts)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group input-group mr-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Тип операції: </span>
                <div class="col-sm-9">
                    <select class="form-control" name="typeOper">
                        @foreach (var item in Model.OperationType)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <input id="Button1" type="submit" value="Сформувати акт" class="btn waves-effect waves-light hor-grd btn-grd-inverse" />
    </form>
</div>
<hr />

@if (ViewBag.Message != null)
{
    <script>
        setTimeout(() => alert("Ви не вибрали підрозділ!"), 500);
    </script>
}
