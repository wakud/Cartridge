@model Cartridge.Models.Punkt

@{
    ViewData["Title"] = "Видалення підрозділу";
}

<h1>Видалити підрозділ?</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Назва підрозділу
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd class="col-sm-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Видалити" class="btn btn-outline-danger" />
                <a asp-action="Index" class="btn btn-outline-info">Повернутися до списку</a>
            </form>
        </dd>
    </dl>
</div>
