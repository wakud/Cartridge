@model Cartridge.Models.Cartridges

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити картридж?</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="">
            Код картриджу:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            Дата введення:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateInsert)
        </dd>
        <dt class="col-sm-2">
            Дата списання:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateDel)
        </dd>
        <dt class="col-sm-2">
            Який знаходиться:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GetPunkt.Name)
        </dd>
        <dt class="col-sm-2">
            Модель картриджу:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GetModelCartridge.Name)
        </dd>
        <dt class="col-sm-2">
            Для принтеру:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => Model.GetModelCartridge.Description)
        </dd>
        <dt class="col-sm-2">
            Фото картриджу:
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Action("CartridgeImage", "ModelCartridges", new { id = Model.GetModelCartridge.Id })" style="width:300px;" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">До списку картриджів</a>
    </form>
</div>
