@model IEnumerable<Cartridge.Models.Cartridges>

@{
    ViewData["Title"] = "Index";
}

<h1>Список картриджів в організації</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Добавити новий</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Код
            </th>
            <th>
                Модель картриджу
            </th>
            <th>
                Де знаходиться
            </th>
            <th>
                Фото картриджу
            </th>
            <th>
                Модель принтеру
            </th>
            <th>
                Заправлений
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GetModelCartridge.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GetPunkt.Name)
            </td>
            <td>
                <img src="@Url.Action("CartridgeImage", "ModelCartridges", new { id = @item.GetModelCartridge.Id })" style="width:100px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GetModelCartridge.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Змінити</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детально</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
